doctype html
html(lang="en")   
    head 
        meta(charset="UTF-8")
        title='Login page'
        link(href="https://fonts.googleapis.com/css?family=Fira+Sans+Condensed" rel="stylesheet")
        style
            include ./style.css
    body
        h1 Login application
        p Welcome to our login app, if you want to proceed you need log in
        div.container
            form.input(action="/auth/google/logged")
